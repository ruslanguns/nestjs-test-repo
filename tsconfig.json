{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "ic/utils": [
        "libs/utils/src"
      ],
      "ic/utils/*": [
        "libs/utils/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}